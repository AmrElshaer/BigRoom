@model IEnumerable<QuizeDto>

@section MainStyle{

    <!-- bradcam_area_start -->
    <div class="bradcam_area breadcam_bg overlay2">
        <h3>Quizes</h3>
    </div>
    <!-- bradcam_area_end -->

}
<div style="text-align:center">
    <h1 class="boxed_btn">Please Refresh Page To Ensure That Quize Is Start</h1>

    <table class="table table-hover mt-5">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeEnd)
                </th>
                <th>Duration</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeEnd)
                    </td>
                    <td>
                        @{
                            var hour = item.Hour?.ToString() ?? "00";
                            var minute = item.Minute?.ToString() ?? "00";
                        }
                        @($"{hour}:{minute}")
                    </td>
                    <td>

                        @if (item.TimeStart <= DateTime.Now && DateTime.Now <= item.TimeEnd)
                        {
                            <a class="btn btn-outline-warning mb-2" asp-action="Details" asp-route-id="@item.Id">Register</a>
                        }

                        <a class="btn btn-outline-warning mb-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                        <a class="btn btn-outline-warning mb-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                        <a class="btn btn-outline-warning mb-2" asp-action="Index" asp-controller="Degree" asp-route-id="@item.Id">All Student Exercise</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>