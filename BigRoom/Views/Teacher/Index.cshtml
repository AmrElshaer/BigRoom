@model UserProfileDto


@section MainStyle{
    <!-- bradcam_area_start -->
    <div class="courses_details_banner">
        <div class="container">
            <div class="row">
                <div class="col-xl-6">
                    <div class="course_text">
                        <h3>BigRoom </h3>
                        <h3> Wellcom With Us</h3>
                        <h3>@User.Identity.Name</h3>



                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- bradcam_area_end -->
}

<div style="text-align:center">
    <p class="mb-5 mt-5">
        <a asp-action="Create" asp-controller="Groups" class="boxed_btn">Create Group</a>
    </p>

    <table class="table">
        <caption style="text-align:center">Group You Join</caption>
        <thead class="thead-dark">
            <tr>
                <th>Group</th>
                <th>CodeJoin</th>
                <th>Create At</th>
                <th>Create By</th>
                <th>Last Modified</th>
                <th>Modified By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Groups)
            {
                <tr>
                    <td>
                        @item.Group.Name
                    </td>
                    <td>
                        @item.Group.CodeJion
                    </td>
                    <td>
                        @item.Group.CreatedOn
                    </td>
                    <td>
                        @item.Group.CreatedBy.GetNameFromEmail()
                    </td>
                    <td>
                        @item.Group.LastModifiedOn
                    </td>
                    <td>
                        @item.Group.LastModifiedBy.GetNameFromEmail()
                    </td>
                    <td style="float:right;">
                        <a href="/Groups/Details/@item.GroupId" class="btn btn-outline-warning">Visit Group</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table">
        <caption style="text-align:center">Groups you Admin</caption>

        <thead class="thead-light">
            <tr>
                <th>Group</th>
                <th>CodeJoin</th>
                <th>Create At</th>
                <th>Create By</th>
                <th>Last Modified</th>
                <th>Modified By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GroupsThatAdmin)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>@item.CodeJion</td>
                    <td>
                        @item.CreatedOn
                    </td>
                    <td>
                        @item.CreatedBy.GetNameFromEmail()
                    </td>
                    <td>
                        @item.LastModifiedOn
                    </td>

                    <td>
                        @item.LastModifiedBy.GetNameFromEmail()
                    </td>
                    <td style="float:right;">
                        <a href="/Groups/GroupYouAdmin/@item.Id" class="btn btn-outline-warning">Visit Group</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
